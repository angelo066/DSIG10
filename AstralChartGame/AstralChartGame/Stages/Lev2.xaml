            <RelativePanel Margin="50,0,500,50">
                <Button Width="78" Height="78" Margin="482,62,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

                <Button Width="78" Height="78" Margin="812,389,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

                <Button Width="78" Height="78" Margin="644,723,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

                <Button Width="78" Height="78" Margin="851,1031,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

                <Button Width="78" Height="78" Margin="830,132,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

                <Button Width="78" Height="78" Margin="506,375,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>

        </RelativePanel>
        </Viewbox>
    </Grid>
</Page>
