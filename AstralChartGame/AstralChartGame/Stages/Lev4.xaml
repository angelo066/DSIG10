                <Button Margin="667,594,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>
                <Button Margin="508,559,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>
                <Button Margin="567,625,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>
                <Button Margin="522,742,0,0" VerticalAlignment="Top" Style="{StaticResource StarAvailable}"/>
