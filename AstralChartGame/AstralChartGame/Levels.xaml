<Page
    x:Class="AstralChartGame.Levels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AstralChartGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>

            <ColumnDefinition Width="2*"/>

            <ColumnDefinition Width="2*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2.25*"/>
            <RowDefinition Height="2.25*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Image HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Grid.RowSpan="4" Grid.ColumnSpan="3" Source="/Assets/Stars.jpg" Stretch="UniformToFill"/>

        <!--<Button x:Name="backButton" Content="Back" Click="back_Click" Tag=""  FontSize="35" Margin="77,0,0,0" RequestedTheme="Dark" FontFamily="Audiowide"/>-->
        <Button x:Name="backButton" Content="Back" Click="Back_Click" VerticalAlignment="Top" FontSize="35"  FontFamily="Audiowide" RequestedTheme="Dark"/>


        <TextBlock Grid.Column="1" Grid.Row ="0" Text="Levels" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="55" FontFamily="Audiowide" RequestedTheme="Dark" ></TextBlock>

        <!--<Image Source ="/Assets/levels.png" Grid.Column="1" Grid.RowSpan="2" Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->
        <Button Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "1"></Button>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "2"></Button>
        <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "3"></Button>
        <Button Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "4"></Button>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "5"></Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50" Click="onLevelSelecte_click" Tag = "6"></Button>
                                                                                                                                 
        <Viewbox Grid.Row="3" RequestedTheme="Dark">
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,20,0,20">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Yellow" Margin="10,10,10,10" Width="30" Height="30"/>
                    <TextBlock Grid.Column="1" Grid.Row ="0" Text="Completed" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="55" FontFamily="Audiowide" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="Blue" Grid.Row="1" Margin="10,10,10,10" Width="30" Height="30" />
                    <TextBlock Grid.Column="1" Grid.Row ="1" Text="Unlocked" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="55" FontFamily="Audiowide"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Fill="White" Grid.Row="2" Margin="10,10,10,10" Width="30" Height="30" />
                    <TextBlock Grid.Column="1" Grid.Row ="2" Text="Locked" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="55" FontFamily="Audiowide"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
